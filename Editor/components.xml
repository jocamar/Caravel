<Components>

	<Component name="Cv_TransformComponent">
		<Element name="Position" type="int" fieldNames="x,y,z" editorNames="X,Y,Z"/>
		<Element name="Rotation" type="float" fieldNames="radians" editorNames="Angle"/>
        <Element name="Scale" type="float" fieldNames="x,y" editorNames="X,Y"/>
        <Element name="Origin" type="float" fieldNames="x,y" editorNames="X,Y"/>
	</Component>
	
	<Component name="Cv_RigidBodyComponent">
		<Element name="Material" type="physicsMaterial" fieldNames="material" />
		<Element name="Physics" type="physicsProperties" />
        <Element name="Body" type="bodyProperties" />
        <Element name="CollisionShapes" type="physicsShapes" />
    </Component>
	
	<Component name="Cv_SpriteComponent">
		<Element name="Color" type="rgba" />
		<Element name="Texture" type="file" fieldNames="resource" extensions="Image Files(*.PNG;*.JPG;)|*.PNG;*.JPG;|All files (*.*)|*.*"  />
		<Element name="Size" type="int" fieldNames="width,height" editorNames="Width,Height"/>
        <Element name="Animation" type="animationProperties" />
	</Component>
	
	<Component name="Cv_CameraComponent">
		<Element name="Properties" type="cameraProperties" />
	</Component>
	
</Components>